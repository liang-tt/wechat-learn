/* pages/book/book-detail/book-detail.wxss */
page {
  background-color: #f5f5f5;
}

.header {
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.content {
  padding-bottom:100rpx;
}

.content > view{
  display: flex;
  flex-direction: column;
  width: 690rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.title {
  font-size: 30rpx;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.cover {
  width: 200rpx;
  height: 300rpx;
}

.book-title {
  font-size: 38rpx;
  font-weight: bold;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.bottom {
  height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 690rpx;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
}

.post-fake {
  width: 400rpx;
  height: 55rpx;
  border: 1px solid;
  border-radius: 30rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
}

.summary {
  font-size: 28rpx;
  text-indent: 58rpx;
  color: #999;
}

.fake-container {
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 100%;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: column;
    z-index:100;
}

.post-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  border-bottom: 1px solid #e3e3e3;
  padding: 0 30rpx;
}

.posting-container {
  padding: 20rpx 30rpx;
}

.nums {
  font-size: 24rpx;
  color: #999;
}
.comments-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

