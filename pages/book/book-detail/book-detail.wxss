page {
  background-color: #f5f5f5;
}

.header {
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.content > view{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.title {
  font-size: 30rpx;
  text-align: center;
}

.bottom {
  height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 690rpx;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
}

.post-fake {
  width: 400rpx;
  height: 55rpx;
  border: 1px solid;
  border-radius: 30rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
}